{
  "name": "@jayminwest/kota-ai",
  "version": "1.0.0",
  "description": "Knowledge Oriented Thinking Assistant",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jayminwest/kota-ai.git"
  },
  "bugs": {
    "url": "https://github.com/jayminwest/kota-ai/issues"
  },
  "homepage": "https://github.com/jayminwest/kota-ai#readme",
  "bin": {
    "kota": "dist/cli.js"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:test": "tsc -p tsconfig.test.json",
    "lint": "eslint 'src/**/*.ts' 'test/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts' 'test/**/*.ts' '*.json' '*.md'",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "typecheck:test": "tsc --noEmit -p tsconfig.test.json",
    "test": "vitest run --config vitest.config.ts",
    "test:watch": "vitest --config vitest.config.ts",
    "test:coverage": "vitest run --coverage --config vitest.config.ts",
    "test:ui": "vitest --ui --config vitest.config.ts",
    "test:unit": "vitest run test/unit --config vitest.config.ts",
    "test:integration": "vitest run test/integration --config vitest.config.ts",
    "test:e2e": "vitest run test/e2e --config vitest.config.ts",
    "pretest": "npm run build"
  },
  "keywords": [
    "ai",
    "knowledge management",
    "cli",
    "local-first",
    "mcp",
    "typescript"
  ],
  "author": "jayminwest",
  "license": "MIT",
  "devDependencies": {
    "@types/blessed": "^0.1.25",
    "@types/node": "^22.14.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/coverage-v8": "^1.4.0",
    "@vitest/ui": "^1.4.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "happy-dom": "^14.3.9",
    "prettier": "^3.3.3",
    "tslib": "^2.6.2",
    "typescript": "^5.8.2",
    "vitest": "^1.4.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@modelcontextprotocol/sdk": "^1.8.0",
    "blessed": "^0.1.81",
    "commander": "^13.1.0"
  }
}
